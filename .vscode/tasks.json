{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "start-qemu",
            "type": "shell",
            "command": "qemu-system-x86_64",
            "options": {
                "cwd": "${workspaceFolder}/multiboot",
            },
            "args": [
                "-kernel",
                "${workspaceFolder}/multiboot/kernel",
                "-S",
                "-gdb",
                "tcp::1234"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}